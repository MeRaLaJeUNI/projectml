<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.projectml">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ProjectML">

        <!-- MainActivity es la actividad principal que lanza la aplicaciÃ³n -->
        <activity
            android:name=".ui.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- PropiedadesActivity -->
        <activity
            android:name=".ui.PropiedadesActivity"
            android:exported="false" />

        <!-- MostrarPropiedadesActivity -->
        <activity
            android:name=".ui.MostrarPropiedadesActivity"
            android:exported="false" />
    </application>

</manifest>
